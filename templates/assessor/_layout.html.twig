{% extends 'base.html.twig' %}

{% block page_title 'Assesseur' %}
{% block canonical_url url('app_assessor_request') %}
{% block meta_description "Proposez-vous en tant qu'assesseur" %}

{% block open_graph_image (homepage_url ~ static_asset('procuration-sharer.jpg', { q: 70 }))|raw %}

{% block banner '' %}
{% block header '' %}
{% block footer '' %}

{% block content %}
    <main class="procuration">
        <div class="procuration__upper">
            <section class="procuration__header--outer l__row l__row--h-stretch list__links--nav progressive-background text--center text--white"
                     data-sd="{{ static_asset('procuration.jpg', { w: 300, q: 20 }) }}"
                     data-hd="{{ static_asset('procuration.jpg', { w: 2000, q: 70 }) }}">
                <div class="l__wrapper l__row space--30-0">
                    <a href="{{ path('homepage') }}" class="text--logo link--no-decor text--white">EM!</a>
                </div>
                <div class="procuration__header--inner l__wrapper--slim">
                    <h1 class="text--larger">
                        Proposez-vous en tant qu'assesseur
                    </h1>
                    {% block subtitle %}
                        <h2 class="text--medium b__nudge--top l__hide--on-mobile">
                            Les élections européennes ont lieu le 26 mai 2019 en France.
                        </h2>
                    {% endblock %}
                </div>
            </section>

            <section>
                {% block assessor_content %}{% endblock %}
            </section>
        </div>
    </main>
{% endblock %}
